<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.memoria.model.dao.EventDao">

	<!-- 전체 조회 -->
	<select id="selectAll" resultType="Event">
		SELECT *
		FROM events
	</select>

	<!-- 이벤트  -->
	<update id="completeEvent" parameterType="User">
		UPDATE users
		SET eventDay = #{eventDay}
		WHERE userNo = #{userNo}
	</update>

	<!-- 검색 기능  -->
	<select id="search" resultType="Event" parameterType="SearchCondition">
		SELECT eventTitle, description, eventDay
		FROM events
		<!-- 검색 조건 (동적쿼리)-->
		<if test="key != 'none'">
			WHERE ${key} LIKE concat('%', #{word}, '%')
		</if>
		<!-- 어떤 기준으로 어떤 방향으로 정렬 -->
		<if test="orderBy != 'none'">
			ORDER BY ${orderBy} ${orderByDir}
		</if>
	</select>
</mapper>